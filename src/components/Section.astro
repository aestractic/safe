---
const { color, title, subtitle } = Astro.props
const textColor = `text-${color}`
---

<section class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative" data-header-color={ color }>
    <div class="z-30 relative h-full flex flex-col">
        <header class="px-4 md:px-8">
            <h2 class={` ${textColor} pt-32 md:pt-40 text-2xl sm:text-3xl md:text-[40px] font-medium `}>{title}</h2>
            <p class={`${textColor} text-sm md:text-base mt-2`}>{subtitle}</p>
        </header>
        <footer class="flex flex-col flex-grow justify-end pb-16 md:pb-20">
            <div>
                <a class={` border-2 md:border-[3px] border-white bg-white/5 backdrop-blur-xl text-sm rounded font-medium text-${color} px-8 md:px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors `} href="https://www.google.com" target="_blank">Cotizar</a>
            </div>
        </footer>
    </div>
    
    

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <slot name="background"></slot>
        <video class="object-center object-cover h-full w-full" autoplay muted loop src="/pagani.mp4"></video>
    </div>
</section>